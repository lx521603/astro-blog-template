import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'æ—¥å¸¸';
const description = 'Latest articles.';
const permalink = `${Astro.site.href}blog`;

// ç›´æ¥ä½¿ç”¨ import.meta.glob è·å–æ–‡ç« åŸå§‹å†…å®¹
const postModules = import.meta.glob('../../data/blog-posts/*.md', { 
  eager: true,
  query: '?raw'
});

// å¤„ç†æ–‡ç« æ•°æ®
const allPosts = Object.entries(postModules).map(([filePath, module]) => {
  const rawContent = module.default;
  const fileName = filePath.split('/').pop();
  const slug = fileName.replace('.md', '');
  
  // è§£æ frontmatter
  const frontmatterMatch = rawContent.match(/---\s*\n([\s\S]*?)\n\s*---/);
  let frontmatter = {};
  
  if (frontmatterMatch) {
    const frontmatterText = frontmatterMatch[1];
    frontmatterText.split('\n').forEach(line => {
      const colonIndex = line.indexOf(':');
      if (colonIndex > -1) {
        const key = line.slice(0, colonIndex).trim();
        const value = line.slice(colonIndex + 1).trim().replace(/^['"](.*)['"]$/, '$1');
        frontmatter[key] = value;
      }
    });
  }
  
  // è·å–æ­£æ–‡å†…å®¹ï¼ˆå»æ‰ frontmatter éƒ¨åˆ†ï¼‰
  const body = frontmatterMatch ? rawContent.slice(frontmatterMatch[0].length) : rawContent;
  
  return {
    slug,
    data: frontmatter,
    body
  };
}).filter(post => post.data.title) // ç¡®ä¿æœ‰æ ‡é¢˜çš„æ–‡ç« 
  // ä¿®æ”¹æ’åºé€»è¾‘ï¼šå…ˆæŒ‰ç½®é¡¶æ’åºï¼Œå†æŒ‰æ—¥æœŸæ’åº
  .sort((a, b) => {
    // æ£€æŸ¥æ˜¯å¦ä¸ºç½®é¡¶æ–‡ç« 
    const aPinned = a.data.pinned === 'true' || a.data.pinned === true;
    const bPinned = b.data.pinned === 'true' || b.data.pinned === true;
    
    // ç½®é¡¶æ–‡ç« æ’åœ¨å‰é¢
    if (aPinned && !bPinned) return -1;
    if (!aPinned && bPinned) return 1;
    
    // éƒ½æ˜¯ç½®é¡¶æˆ–éƒ½ä¸æ˜¯ç½®é¡¶ï¼ŒæŒ‰æ—¥æœŸæ’åº
    return new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf();
  });

// æ”¹è¿›çš„å›¾ç‰‡æå–å‡½æ•°
function getFirstImageFromBody(body) {
  if (!body) return null;
  
  // å…ˆåŒ¹é… Markdown å›¾ç‰‡è¯­æ³• ![alt](src)
  const mdRegex = /!\[.*?\]\((.*?)\)/i;
  const mdMatch = body.match(mdRegex);
  if (mdMatch) return mdMatch[1];
  
  // å†åŒ¹é… HTML img æ ‡ç­¾
  const htmlRegex = /<img[^>]+src="([^">]+)"[^>]*>/i;
  const htmlMatch = body.match(htmlRegex);
  if (htmlMatch) return htmlMatch[1];
  
  return null;
}
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <div class="container">
    <h1>æ—¥å¸¸</h1>
    {allPosts.map((post, index) => {
      // ä¿®å¤é“¾æ¥ï¼šæ·»åŠ æ–œæ 
      const href = `/blog/${post.slug}/`;
      const firstImage = getFirstImageFromBody(post.body);
      const isPinned = post.data.pinned === 'true' || post.data.pinned === true;
      
      return (
        <div>
          { index !== 0 && <hr /> }
          <div class={`post-item ${isPinned ? 'pinned-post' : ''}`}>
            {/* è‡ªåŠ¨æ˜¾ç¤ºæ­£æ–‡ä¸­çš„ç¬¬ä¸€å¼ å›¾ç‰‡ */}
            {firstImage && (
              <div class="post-image auto">
                <a href={href}>
                  <img 
                    src={firstImage} 
                    alt={post.data.title}
                    loading="lazy"
                    onerror="this.style.display='none'"
                  />
                </a>
              </div>
            )}
            <div class="post-content">
              <h2>
                <a href={href}>{post.data.title}</a>
                {isPinned && <span class="pinned-badge">ç½®é¡¶ ğŸ”</span>}
              </h2>
              <p>{post.data.description}</p>
              <div class="post-item-footer">
                <span class="post-item-date">â€” {post.data.publishDate}</span>
              </div>
            </div>
          </div>
        </div>
      )
    })}
  </div>
</BaseLayout>

